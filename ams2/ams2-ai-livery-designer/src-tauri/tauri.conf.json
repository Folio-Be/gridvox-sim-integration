{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "ams2-ai-livery-designer",
    "version": "0.1.0",
    "identifier": "com.gridvox.ams2-ai-livery-designer",
    "build": {
        "beforeDevCommand": "npm run dev",
        "devUrl": "http://localhost:1430",
        "beforeBuildCommand": "npm run build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "AMS2 AI Livery Designer - POC",
                "width": 1280,
                "height": 900,
                "resizable": true,
                "fullscreen": false
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}