{
    "name": "@gridvox/track-map-workspace",
    "version": "1.0.0",
    "private": true,
    "description": "GridVox Track Map Visualization - Multi-sim library with Pixi.js rendering",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "dev": "npm run dev -w @gridvox/track-map-demo",
        "build": "npm run build -w @gridvox/track-map-core && npm run build -w @gridvox/track-map-ams2",
        "build:demo": "npm run build -w @gridvox/track-map-demo",
        "record": "npm run record -w @gridvox/track-recorder",
        "clean": "rimraf packages/*/dist packages/*/node_modules",
        "type-check": "tsc --build --force"
    },
    "devDependencies": {
        "@types/node": "^20.10.0",
        "rimraf": "^5.0.5",
        "typescript": "^5.3.0"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=9.0.0"
    }
}