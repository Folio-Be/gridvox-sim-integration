{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "ams2-overlay-poc",
  "version": "0.1.0",
  "identifier": "com.gridvox.ams2-overlay-poc",
  "build": {
    "beforeDevCommand": "npm run dev",
  "devUrl": "http://localhost:1421",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
  "targets": "all",
    "icon": [
      "icons/icon.ico"
    ]
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "GridVox Overlay POC - Main",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      },
      {
        "label": "overlay",
        "title": "GridVox Overlay",
        "url": "overlay.html",
        "width": 800,
        "height": 450,
        "resizable": false,
        "fullscreen": false,
        "decorations": false,
        "alwaysOnTop": true,
        "transparent": true,
        "skipTaskbar": true,
        "visible": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  }
}
