# Assetto Corsa Installation Path
AC_INSTALL_PATH=C:\Program Files (x86)\Steam\steamapps\common\assettocorsa

# Output Directories
OUTPUT_DIR=./output
KN5_OUTPUT_DIR=./output/kn5
FBX_OUTPUT_DIR=./output/fbx
GLTF_OUTPUT_DIR=./output/gltf

# Tool Paths (auto-detected if in tools/ directory)
KN5_CONVERTER_PATH=./tools/kn5-converter/kn5conv.exe
FBX2GLTF_PATH=./tools/FBX2glTF/FBX2glTF.exe

# Conversion Settings
DRACO_COMPRESSION=true
DRACO_COMPRESSION_LEVEL=7
DRACO_BITS_POSITION=14
DRACO_BITS_UV=10
DRACO_BITS_NORMALS=10

# Filter Options
# Comma-separated list of car IDs to extract (leave empty for all)
EXTRACT_CARS=
# Example: EXTRACT_CARS=ks_ferrari_488_gt3,ks_porsche_911_gt3_r_2016

# Skip already converted files
SKIP_EXISTING=true

# Logging
VERBOSE=false
LOG_FILE=./car-extractor.log
