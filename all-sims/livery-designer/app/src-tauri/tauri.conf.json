{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "GridVox Livery Designer",
    "version": "0.1.0",
    "identifier": "com.gridvox.liverydesigner",
    "build": {
        "beforeDevCommand": "pnpm dev",
        "devUrl": "http://127.0.0.1:1470",
        "beforeBuildCommand": "pnpm build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "GridVox AI Livery Designer",
                "width": 1280,
                "height": 800,
                "resizable": true
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}