# OBS Studio WebSocket Configuration
OBS_WEBSOCKET_URL=ws://localhost:4455
OBS_WEBSOCKET_PASSWORD=your_password_here

# Label Studio Configuration
LABEL_STUDIO_URL=http://localhost:8080
LABEL_STUDIO_TOKEN=your_api_token_here
LABEL_STUDIO_PROJECT_ID=1

# Processing Configuration
FRAME_EXTRACTION_FPS=0.5
SCENE_DETECTION_THRESHOLD=0.3
USE_OMNIPARSER=true
OMNIPARSER_DEVICE=cuda  # or 'cpu'
OMNIPARSER_BATCH_SIZE=16

# Paths (optional - defaults shown)
VIDEO_INPUT_DIR=~/Videos
CAPTURES_OUTPUT_DIR=data/captures
PREANNOTATIONS_DIR=data/preannotations
LABELED_OUTPUT_DIR=data/labeled

# Logging
LOG_LEVEL=info  # debug, info, warn, error
LOG_FILE=data/logs/recorder.log
